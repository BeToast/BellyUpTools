rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    match /SeatingCharts/{document} {
      allow read, write: if true;
    }
    
    // Allow read and write access to the specific SeatingCharts document
    match /SeatingCharts/devChart {
      allow read, write: if true;
    }
    
    // If you need to allow access to subcollections of devChart, use this rule
    match /SeatingCharts/devChart/{document=**} {
      allow read, write: if true;
    }
  }
}